{% extends "AppBundle::layout.html.twig" %}
{% block title %} {{ parent() }} {% endblock %}
{% block stylesheets %} {{ parent() }} {% endblock %}
{% block body %}
    {% block heading %} {{ parent() }} {% endblock %}
    {% block container %}
        <div class="call">
            <ul>
                <li>Nom d'utilisateur :  {{ user.username }} </li>
                <li>Adresse email : {{ user.email }}</li>
                <li>Derniere connexion : {{ user.lastLogin|localizeddate('none', 'none', 'fr_FR', null, "cccc, d MMMM Y 'à' HH 'h 'mm 'minutes'") }}</li>
            </ul>

            <ul>
                <li><a class="button" href="{{ path('nao_app_user_edit_profile', {'id' :  app.user.id} ) }}">Éditer profil</a></li>
            </ul>
        </div>

    {% endblock %}
{% endblock %}
{% block footer %} {{ parent() }} {% endblock %}
{% block javascripts %}
    {{ parent() }}
{% endblock %}